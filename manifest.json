{
    "name": "Briefer",
    "description": "Make reading easier by summarizing and simplifiyng web pages",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/favicon.png"
    },
    "permissions": [
      "activeTab", 
      "tabs",
      "scripting",
      "storage"
    ],
    "host_permissions" : [
      "<all_urls>"
    ],
    "icons": {
      "16": "./assets/favicon.png",
      "32": "./assets/favicon.png",
      "48": "./assets/favicon.png",
      "128": "./assets/favicon.png"
    }
  }