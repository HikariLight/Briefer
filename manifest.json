{
    "name": "ClearView",
    "description": "Make reading easier by summarizing and simplifiyng web pages",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab", 
      "tabs",
      "scripting",
      "storage"
    ],
    "host_permissions" : [
      "<all_urls>"
    ]
  }